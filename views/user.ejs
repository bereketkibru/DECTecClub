</header>
<div class="container-fluid user">
  <div class="jumbotron up">

  </div>
  <div class="jumbotron down">
    <div class="container">
      <div class="row">
        <div id="profileImg" class="col-md-3">
          <img class="img-thumbnail img-rounded" width="210px" src="./img/photo.jpg" alt="...">
        </div>
        <div id="personalLinks" class="col-md-9">
          
          <button id="editProfile" type="button" class="btn btn-outline-info float-right" name="button">Edit Profile</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="side-info">
        <h4><%=us.fname%> <%=us.lname%> <%if(us.uname==="admin"){%>
          <i title="Verified" class="fa fa-user-secret"></i> <%}%><%if(us.role==="admin"){%>
            <i title="Verified" class="fa fa-check-circle"></i>
           
        <%}%></h4>
        <p class="text-muted">@<a href="#" class="text-muted"><%=us.uname%></a></p>
        <p class="text-muted"><i class="fa fa-calendar-alt"></i> Date Joined &nbsp; <% y=us.date.toString()%>
          <%var x=y.substring(3,16)%>
          <%=x %>%></p>
      </div>
    </div>
    <div class="col-sm-12 col-md-8">
      <div id="basic-info" class="card">
        <div class="card-header">
          <h4>Basic</h4>
        </div>
        <div class="card-body">
          <form>
            <div class="form-group row">
              <label for="inputEmail3" class="col-lg-3 col-sm-3 col-form-label">Username</label>
              <div class="col-sm-8 col-md-8 col-lg-6">
                <input type="email" class="form-control" placeholder="Username" value="<%=us.uname%>" disabled>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputEmail3" class="col-lg-3 col-sm-3 col-form-label">Department</label>
              <div class="col-sm-8 col-md-8 col-lg-6">
                <input type="text" class="form-control" placeholder="Department" value="<%=us.department%>" disabled>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputEmail3" class="col-lg-3 col-sm-3 col-form-label">Year</label>
              <div class="col-sm-8 col-md-8 col-lg-6">
                <input type="text" class="form-control" placeholder="Year" value="<%=us.year%>" disabled>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputEmail3" class="col-lg-3 col-sm-3 col-form-label">Email</label>
              <div class="col-sm-8 col-md-8 col-lg-6">
                <input type="email" class="form-control" placeholder="Email" value="<%=us.email%>" disabled>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputEmail3" class="col-lg-3 col-sm-3 col-form-label">Phone</label>
              <div class="col-sm-8 col-md-8 col-lg-6">
                <input type="text" class="form-control" placeholder="phone number" value="<%=us.phone%>" disabled>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div id="basic-info-edit" class="card hidden">
        <div class="card-header">
          <h4>Edit Profile</h4>
        </div>
        <div class="card-body">
          <form action="/user" method="POST">
            <div class="form-group row">
                <label for="inputEmail3" class="col-lg-3 col-sm-3 col-form-label">Phone</label>
                <div class="col-sm-8 col-md-8 col-lg-6">
                  <input type="text" name="phone"class="form-control" placeholder="Phone" value="+251">
                </div>
              </div>
            <div class="form-group row">
              <label for="inputEmail3" class="col-lg-3 col-sm-3 col-form-label">Department</label>
              <div class="col-sm-8 col-md-8 col-lg-6">
                <input type="text" name="department"class="form-control" placeholder="Department" value="<%=us.department%>">
              </div>
            </div>
            <fieldset class="form-group">
              <div class="row">
                <legend class="col-form-label col-lg-3 col-sm-3 pt-0">Year</legend>
                <div class="col-sm-8 col-md-8 col-lg-6">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" value="1">
                    <label class="form-check-label" for="gridRadios1">1st</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" value="2">
                    <label class="form-check-label" for="gridRadios2">2nd</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" value="3">
                    <label class="form-check-label" for="gridRadios3">3rd</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" value="4">
                    <label class="form-check-label" for="gridRadios2">4th</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" value="5">
                    <label class="form-check-label" for="gridRadios3">5th</label>
                  </div>
                </div>
              </div>
            </fieldset>
            <div class="form-group row">
              <div class="col-sm-11 col-md-11 col-lg-9">
                <button id="updateProfile" type="submit" class="btn btn-outline-info float-right">Update Profile</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="./js/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
  $updt = $('#updateProfile');
  $edit = $('#editProfile');
  $basic = $('#basic-info');
  $basicEdit = $('#basic-info-edit');
  $edit.on('click', function(){
    $basic.addClass('hidden');
    $basicEdit.removeClass('hidden');
    $edit.addClass('hidden');
  });
  $updt.on('click', function(){
    $basicEdit.addClass('hidden');
    $basic.removeClass('hidden');
    $edit.removeClass('hidden');
  });
</script>

    <script src="./js/umd/popper.min.js"></script>
    <script src="./b/js/bootstrap.min.js"></script>
  </body>
</html>
